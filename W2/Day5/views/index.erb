<!Doctype html>
<html>
  <head>
    <meta charset="utf-8"/>
    <title>Blog!</title>
  </head>
  <body>
    <h2> Welcome </h2>
    <a href="/new">write here!</a>

    <hr/>
    <% @posts.each do |p| %>
    <p><%=p.id %></p>
    <p><%=p.title %></p>
    <p><%=p.content %></p>
    <p><%=p.created_at %></p>
    <p><a href="/posts/<%= p.id %>">글 보러 가기</a></p>
    <!-- <a href="<%= "/posts/#{p.id}"%>">글 보러 가기</a> -->
    <p><a href="/destroy/<%= p.id %>">삭제</a></p>
    <p><a href="/edit/<%= p.id %>">수정</a></p>
    <% end %>
  </body>

</html>
